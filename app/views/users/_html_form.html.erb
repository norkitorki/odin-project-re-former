<form action="<%= patch_form ? "/users/#{user.id}" : '/users' %>" accept-charset="UTF-8" method="post">
  <% if patch_form %>
    <input type="hidden" name="_method" value="patch" autocomplete="off">
  <% end %>

  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" autocomplete="off"></input>

  <div>
    <label for="user_username" style="display:block;">Username</label>
    <input type="text" id="user_username", name="user[username]" value="<%= user.username || @sample_username %>">
  </div>

  <div>
    <label for="user_email" style="display:block;">Email</label>
    <input type="email" id="user_email", name="user[email]" value="<%= user.email %>" placeholder="example@example.com">
  </div>

  <div>
    <label for="user_password" style="display:block;">Password</label>
    <input type="password" id="user_password", name="user[password]" value="<%= user.password %>">
  </div>

  <div>
    <input type="submit" value="Submit">
  </div>
</form>
