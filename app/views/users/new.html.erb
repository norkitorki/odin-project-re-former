<%= form_with(model: @user) do |form| %>
  <div>
    <%= form.label :username, 'Your user name here', style: 'display:block;' %>
    <%= form.text_field :username, value: (@user.username || "user_#{Time.now.strftime('%M%S')}") %>
  </div>

  <div>
    <%= form.label :email, style: 'display:block;' %>
    <%= form.email_field :email, placeholder: (@user.email || 'example@example.com') %>
  </div>

  <div>
    <%= form.label :password, style: 'display:block;' %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit 'Create User', name: nil %>
  </div>
<% end %>
